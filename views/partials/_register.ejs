<form class="register-form col-md-4" action="/register" method="POST">

	<h2>Registration Form</h2>
	  
	  <div class="register-container">

	  	<label for="username"><b>Enter Username</b></label>
	    <input class="col-md-12" type="text" placeholder="user_name" name="username" required>

	    <label for="email"><b>Enter E-mail</b></label>
	    <input class="col-md-12" type="email" placeholder="example@example.com" name="email" required>

	    <label for="password"><b>Enter Password</b></label>
	    <input class="col-md-12" type="password" placeholder="myP@ssw0rd" name="password" required>
	     
	    <button class="col-md-12" type="submit">Register</button>
	  </div>

	  <div class="container">
	    <button type="button" class="reg-cancelbtn">Cancel</button>
	    
	  </div>
  
</form>